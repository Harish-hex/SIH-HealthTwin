# Environment Configuration for Digital Health Twin Backend

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Database Configuration
# For SQLite (Development)
DATABASE_URL=sqlite:///health_monitoring.db

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/health_monitoring

# For MySQL (Alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/health_monitoring

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=False

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:8081

# Logging
LOG_LEVEL=INFO

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Model Configuration
MODEL_PATH=model/health_model.pkl
MODEL_VERSION=1.0
